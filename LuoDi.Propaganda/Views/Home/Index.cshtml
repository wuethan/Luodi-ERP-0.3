@{
    ViewBag.Title = "主页";
}
@section head{
    <style type="text/css">
        #fullPage-nav li
        {
            width: 90px;
            height: 21px;
            margin: 10px 0 0;
            vertical-align: middle;
        }
        #fullPage-nav span, .fullPage-slidesNav span
        {
            top: 4px;
            left: 2px;
            width: 6px;
            height: 6px;
            opacity: .6;
            border: #6c6c6c solid 1px;
            background: #6c6c6c;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            border-radius: 50%;
            position: absolute;
            z-index: 1;
        }
        #fullPage-nav li a
        {
            float: right;
            width: 21px;
            height: 21px;
            color: #8F9DA4;
            text-decoration: none;
            text-align: right;
        }
        #fullPage-nav li .active span, .fullPage-slidesNav .active span
        {
            background: 0 0;
        }
        .fullPage-tooltip
        {
            float: left;
            top: 0;
            margin-right: 5px;
            font: 12px "Microsoft Yahei";
            color: #8F9DA4;
        }
        
        /*重新section 增加overflow:hidden*/
        .section
        {
            position: relative;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            overflow: hidden;
        }
        
        .section1
        {
            background: url(images/s1bg.png) no-repeat center fixed;
            background-position: 50% 50%;
            background-repeat: no-repeat;
        }
        .section2
        {
            background: url(images/s2bg.jpg) no-repeat center fixed;
            background-position: 50% 50%;
            background-repeat: no-repeat;
        }
    </style>
    <link href="@Url.Content("~/Content/jquery-fullPage/1.5.3/jquery.fullPage.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-easing/1.3/jquery.easing.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-fullPage/1.5.3/jquery.fullPage.min.js")"></script>
    <script type="text/javascript">
        $(function () {
            $.fn.fullpage({
                verticalCentered: false,
                anchors: ['page1', 'page2', 'page3'],
                navigation: true,
                scrollingSpeed: 1000,
                easing: 'easeInOutCirc',
                navigationTooltips: ['首页', '视觉', '交互']
            });
        });
    </script>
}
